<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <SearchView
            android:id="@+id/sv"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="游易全场全年大促" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yuyin"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩家贴"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="伙伴贴"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家贴"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/head"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="青山白头"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="关注"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_style_4"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="120dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/post_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/pub_content"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:text="给你打辅助的时候，无论什么局，我都不会杀人，从来都是先做宝石。如果你认真看过我的装备栏，每一件都是为你而出..."
            android:gravity="left|top"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/add_img"
            android:layout_width="370dp"
            android:layout_height="160dp"
            android:src="@drawable/pig"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sc"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_marginTop="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/pl"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="454"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/dz"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="449"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>