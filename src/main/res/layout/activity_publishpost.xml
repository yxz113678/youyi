<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PublishpostActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/red1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"
            android:text="帖子发布"
            android:layout_marginLeft="105dp"
            />

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="发布"
            android:textColor="#FFFFFF"
            android:id="@+id/fabu"
            android:background="@drawable/btn_style_4"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="80dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/head"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="青山白头"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/pub_content"
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:hint="写出来和大家分享..."
            android:gravity="left|top"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/add_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/add"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:text="添加标识"
            android:background="@drawable/btn_style_2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/add1" />
        <Button
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:text="添加地点"
            android:background="@drawable/btn_style_2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/where"/>
        <Button
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:text="公开"
            android:background="@drawable/btn_style_2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/open"/>

    </LinearLayout>
</LinearLayout>