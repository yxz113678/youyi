<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PostdeatilActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:src="@drawable/red1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#000000"
            android:text="帖子详情"
            android:layout_marginLeft="110dp"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/more"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/head"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="青山白头"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="关注"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_style_4"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="120dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/pub_content"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:text="给你打辅助的时候，无论什么局，我都不会杀人，从来都是先做宝石。如果你认真看过我的装备栏，每一件都是为你而出.王者峡谷太大了，你可不要离我太远，人头是你的，兵线是你的，所有经济都是你的，我什么都不要，只要你活着。"
            android:gravity="left|top"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/add_img"
            android:layout_width="370dp"
            android:layout_height="160dp"
            android:src="@drawable/pig"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览1888次"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="115dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sc"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/pl"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/zf"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="18dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_marginTop="11dp"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:hint="请发表你的评论"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_style_2"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_style_4"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>

</LinearLayout>