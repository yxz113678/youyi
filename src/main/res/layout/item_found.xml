<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_found"
        android:background="#44d418"
        android:layout_margin="20dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/found_name"
            android:text="名称*****"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="精选 |"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/found_num"
                android:text=" 购买数量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textSize="10dp"
            android:id="@+id/found_introduce"
            android:text="简介*****"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_ck"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:background="@drawable/button_shop"
        android:textColor="#FCC384"
        android:layout_marginTop="30dp"
        android:text="查看"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</LinearLayout>