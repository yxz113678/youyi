<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <gradient
        android:startColor="#fccb08"
        android:centerColor="#f4d736"
        android:endColor="#d77b12"
        android:useLevel="false"
        android:angle="0"
        android:type="linear"
        android:centerX="0"
        android:centerY="0"/>

    <!--边框的宽度和颜色-->
    <stroke android:width="1dp" android:color="#70000000"/>

    <!--<solid android:color="#FDE56B"/>-->

    <!--弧形的半径-->
    <corners android:radius="15dp"/>

    <!--Button里面的文字与边界之间的间隔-->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        />

</shape>